# AI-Enhanced Brand Identifier API Configuration

# OpenAI Configuration (Required for LLM extraction)
OPENAI_API_KEY=Open_API_Key
OPENAI_MAX_TOKENS=10
OPENAI_TEMPERATURE=0.1

# API Configuration
API_TITLE=AI-Enhanced Brand Identifier API
API_VERSION=1.0.0
DEBUG=true
HOST=0.0.0.0
PORT=8000

# File Upload Configuration
MAX_FILE_SIZE=10485760
MAX_BATCH_SIZE=10
ALLOWED_EXTENSIONS=[".html", ".htm"]

# spaCy Configuration
SPACY_MODEL=en_core_web_sm
SPACY_ENABLED=true

# Transformers Configuration
TRANSFORMERS_MODEL=dbmdz/bert-large-cased-finetuned-conll03-english
TRANSFORMERS_ENABLED=true
TRANSFORMERS_THRESHOLD=0.8

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Performance Configuration
REQUEST_TIMEOUT=30
AI_TIMEOUT=10
MAX_CONCURRENT_AI_REQUESTS=5

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# Security Configuration
ENABLE_CORS=true
CORS_ORIGINS=["*"]
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS=100

# Health Check
HEALTH_CHECK_ENABLED=true